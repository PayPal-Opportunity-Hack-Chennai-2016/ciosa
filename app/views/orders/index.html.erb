<%= link_to 'Products', products_path %> | <%= link_to 'Cart', cart_products_path %>
  <div class="row">
    <div class="col s12">
      <table class="highlight responsive-table">
        <thead>
        <tr>
          <th data-field="date">Order Date</th>
          <th data-field="price">Total Price</th>
          <th data-field="billing">Billing Address</th>
          <th data-field="delivery">Delivery Address</th>
          <th data-field="cart_products">Cart Product Details</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.to_date %>
              </td>
              <td>
                <%= order.total_price %>
              </td>
              <td>
                <%= order.billing_address %>
              </td>
              <td>
                <%= order.delivery_address %>
              </td>
              <td>
                <%= link_to 'Cart Products', ordered_products_path( id: order.id ) %>
              </td>
              <td>
                <i class="small material-icons">delete</i>
              </td>s
            </tr>
        <% end %>
        <tr>
          <td colspan="3" ></td>
          <td style="font-weight:bold;border-top:1px solid">Total</td>
          <td style="font-weight:bold;border-top:1px solid"><%= @total_price %></td>
        </tr>


        </tbody>
      </table>
    </div>
  </div>
