<%= flash[:error] %>

<%= form_for @product do |f| %>
    <%= f.text_field :name, class: 'txt-box', autofocus: true %>
    <%= f.text_area :description, class: 'txt-box' %>
    <%= f.select :categories,
                 options_for_select(Category.all.collect { |category| [category.name, category.id] }),
                 multiple: true %>
    <%= f.file_field :image, id:'product-pic-input'%>
    <%= f.submit 'Create Product Request', class: 'btn beta-btn', id: 'submit-btn' %>

<% end %>