<div class="row">
  <div class="col s2"></div>
  <div class="col s8">
    <% @product.errors.full_messages.each do |error_message| %>
        <%= error_message %><br/>
    <% end %>
    <ul>
      <%= form_for @product do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description %>
          </div>
          <div class="field">
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
          <div class="field">
            <%= f.label :available_quantity %>
            <%= f.text_field :available_quantity %>
          </div>
          <div>
            <%= f.select :categories, Category.all.map { |category| [category.name, category.id] } %>
          </div>
          <div class="field">
            <label>Are you selling eco friendly products?</label>
            <p>
              <input name="is_eco_friendly" type="radio" id="eco_1" value="1"/>
              <label for="eco_1">Yes</label>
            </p>
            <p>
              <input name="is_eco_friendly" type="radio" id="eco_0" value="0" />
              <label for="eco_0">No</label>
            </p>
          </div>
          <div>
            <%= f.submit 'Submit', class: 'btn beta-btn', id: 'submit-btn' %>
          </div>
      <% end %>
    </ul>
  </div>
  <div class="col s2"></div>
</div>


<script>
  $(document).ready(function() {
    $('select').material_select();
  });
</script>