<div class="row">
    <% @products.each do |product| %>
        <div class="col s3">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="http://lorempixel.com/580/250/nature/2">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= product.name %><i class="material-icons right">more_vert</i></span>
              <% if product.creator_id == current_user.try(:id) %>
                  <p><%= link_to 'Edit', edit_product_path(id: product.id) %> |  <%= link_to 'Delete', product_path(id: product.id), method: :destroy %></p>
            <% end %>

              <%= link_to 'Add to Cart', cart_products_path(pid: product.id), method: :post %>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
              <p><%= product.price %> <%= product.categories.map(&:name).join %></p>
            </div>
          </div>
        </div>

    <% end %>
</div>

<script>
    $(document).ready(function(){
        $('.slider').slider({full_width: true});
    });

</script>